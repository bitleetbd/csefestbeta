<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:id="@+id/drawer"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/white"
        app:subtitleTextColor="@color/white"
        android:id="@+id/toolbar"
        app:titleMarginTop="12dp"
        android:gravity="center|top|start">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="25dp"
            android:src="" />

    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:menu="@menu/nav__drawer"
        app:headerLayout="@layout/nav_header"
        android:fitsSystemWindows="true"
        android:layout_gravity="start">

    </com.google.android.material.navigation.NavigationView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"
        android:layout_below="@+id/nav_view"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Welcome to MIU CSE Fest 2020"
                android:textAlignment="center"
                android:textSize="30sp"
                android:id="@+id/welcomemessage" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/relativeLayout"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/round_shape"
                android:backgroundTint="@color/white">

                <TextView
                    android:id="@+id/tvhappyevent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="50dp"
                    android:singleLine="true"
                    android:text="See you next time!"
                    android:textColor="@color/beguni"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="35dp"
                    android:gravity="center|left"
                    android:foregroundGravity="center_horizontal"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/timer_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="There are only"
                        android:textSize="20sp"
                        android:id="@+id/textView1"
                        android:textColor="@color/black"
                        android:gravity="center" />

                    <LinearLayout
                        android:id="@+id/LinearLayout10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/LinearLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="2dp"
                            android:background="@drawable/round_shape"
                            android:backgroundTint="@color/green"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtTimerDay"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@color/red"
                                android:textSize="35dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txt_TimerDay"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="Days"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="#fff"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/LinearLayout11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/round_shape"
                            android:backgroundTint="@color/green"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtTimerHour"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@color/pink"
                                android:textSize="35dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txt_TimerHour"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="Hours"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="#fff"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/LinearLayout12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/round_shape"
                            android:backgroundTint="@color/green"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtTimerMinute"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@color/gray"
                                android:textSize="35dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txt_TimerMinute"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="Minutes"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="#fff"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/LinearLayout13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="2dp"
                            android:background="@drawable/round_shape"
                            android:backgroundTint="@color/green"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtTimerSecond"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@color/green"
                                android:textSize="35dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txt_TimerSecond"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="Seconds"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="#fff"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Till the fire up!"
                        android:id="@+id/textView2"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="22sp" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/white"
                android:layout_marginLeft="10dp"
                android:background="@drawable/round_shape"
                android:id="@+id/buttonContainer"
                android:layout_below="@+id/welcomemessage">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/Button_Layout">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:width="10dp"
                        android:layout_weight="1"
                        android:text="Events"
                        android:textSize="20sp"
                        android:drawableStart="@drawable/ic_today_black_24dp"
                        android:gravity="left|center"
                        android:paddingLeft="10dp"
                        android:textColor="@color/white"
                        android:background="@drawable/round_shape"
                        android:backgroundTint="@color/blue"
                        android:id="@+id/eventButton" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:background="@drawable/round_shape"
                        android:backgroundTint="@color/yellow"
                        android:width="10dp"
                        android:drawableStart="@drawable/ic_speaker"
                        android:gravity="left|center"
                        android:paddingLeft="10dp"
                        android:textSize="20sp"
                        android:layout_marginLeft="10dp"
                        android:text="Speaker"
                        android:id="@+id/SpeakerButton" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_below="@+id/Button_Layout"
                    android:id="@+id/Button_Layout2">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:width="10dp"
                        android:text="Venue"
                        android:textSize="20sp"
                        android:drawableStart="@drawable/ic_location"
                        android:gravity="left|center"
                        android:paddingLeft="10dp"
                        android:textColor="@color/white"
                        android:background="@drawable/round_shape"
                        android:backgroundTint="@color/gray"
                        android:layout_weight="1"
                        android:id="@+id/VenueButton" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:width="10dp"
                        android:text="Exhibitors"
                        android:layout_marginLeft="10dp"
                        android:drawableStart="@drawable/ic_home"
                        android:gravity="left|center"
                        android:paddingLeft="10dp"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:background="@drawable/round_shape"
                        android:backgroundTint="@color/red"
                        android:layout_weight="1"
                        android:id="@+id/ExhibitorsButton" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:layout_below="@+id/Button_Layout2">


                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:width="10dp"
                        android:text="Key Facts"
                        android:drawableStart="@drawable/ic_keyfacts"
                        android:gravity="left|center"
                        android:paddingLeft="10dp"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:background="@drawable/round_shape"
                        android:backgroundTint="@color/pink"
                        android:layout_weight="1"
                        android:id="@+id/KeyfactButton" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:width="10dp"
                        android:layout_marginLeft="10dp"
                        android:drawableStart="@drawable/ic_attraction"
                        android:gravity="left|center"
                        android:paddingLeft="10dp"
                        android:textColor="@color/white"
                        android:background="@drawable/round_shape"
                        android:backgroundTint="@color/green"
                        android:textSize="20sp"
                        android:text="Attraction"
                        android:layout_weight="1"
                        android:id="@+id/AttractionButton" />
                </LinearLayout>

            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/get_my_pass_button"
                android:textSize="20sp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/round_shape"
                android:backgroundTint="@color/skyBlue"
                android:text="Get My Pass" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:background="@drawable/stroke_shape"
                android:orientation="horizontal">

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/round_shape"
                    android:src="@drawable/partner" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_shape"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:text="Our Partner"
                    android:textSize="25sp"
                    android:gravity="center" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_shape"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:src="@drawable/prize70k" />

                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:src="@drawable/contest10" />

                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:src="@drawable/seminer2" />

                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:src="@drawable/speaker5" />
                    </LinearLayout>

                </HorizontalScrollView>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center|left">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/placelogo"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:text="#MIUCSEFEST2020" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</androidx.drawerlayout.widget.DrawerLayout>