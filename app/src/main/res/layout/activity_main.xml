<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/toolbar">

    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:menu="@menu/nav__drawer"
        app:headerLayout="@layout/nav_header"
        android:fitsSystemWindows="true"
        android:layout_gravity="start">

    </com.google.android.material.navigation.NavigationView>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"
        android:layout_below="@+id/nav_view"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to MIU CSE Fest 2020"
            android:textAlignment="center"
            android:textSize="30sp"
            android:id="@+id/welcomemessage"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonContainer"
            android:layout_below="@+id/welcomemessage">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_margin="2pt"
                android:id="@+id/Button_Layout">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="10dp"
                    android:layout_weight="1"
                    android:text="Events"
                    android:id="@+id/eventButton"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:width="10dp"
                    android:text="Speaker"
                    android:id="@+id/SpeakerButton"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_below="@+id/Button_Layout"
                android:id="@+id/Button_Layout2">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="10dp"
                    android:text="Venue"
                    android:layout_weight="1"
                    android:id="@+id/VenueButton"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="10dp"
                    android:text="Exhibitors"
                    android:layout_weight="1"
                    android:id="@+id/ExhibitorsButton"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_below="@+id/Button_Layout2">



                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="10dp"
                    android:text="Key Facts"
                    android:layout_weight="1"
                    android:id="@+id/KeyfactButton"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="10dp"
                    android:text="Attraction"
                    android:layout_weight="1"

                    android:id="@+id/AttractionButton"/>
            </LinearLayout>

        </RelativeLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/get_my_pass_button"
            android:layout_below="@+id/buttonContainer"
            android:text="Get My Pass" />
        <ImageSwitcher
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/image_switcher"
            android:layout_below="@+id/get_my_pass_button">

        </ImageSwitcher>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Discovery_Session"
            android:layout_below="@+id/image_switcher"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="1MIU CSE Club is going to arrange annual mega tech event in Manarat International University"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="2MIU CSE Club is going to arrange annual mega tech event in Manarat International University"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="3MIU CSE Club is going to arrange annual mega tech event in Manarat International University"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="4MIU CSE Club is going to arrange annual mega tech event in Manarat International University"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="5MIU CSE Club is going to arrange annual mega tech event in Manarat International University"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="6MIU CSE Club is going to arrange annual mega tech event in Manarat International University"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="7MIU CSE Club is going to arrange annual mega tech event in Manarat International University"></TextView>


        </LinearLayout>
    </GridLayout>

</androidx.drawerlayout.widget.DrawerLayout>